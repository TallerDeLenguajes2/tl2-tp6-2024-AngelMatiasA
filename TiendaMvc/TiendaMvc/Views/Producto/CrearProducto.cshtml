@model Tp5Tienda.ViewModels.Cre

@{
    ViewData["Title"] = "Crear producto";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-controller="Producto" asp-action="AltaProducto" method="post">
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Precio"></label>
        <input asp-for="@Model.Precio" class="form-control" />
        <span asp-validation-for="@Model.Precio" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
